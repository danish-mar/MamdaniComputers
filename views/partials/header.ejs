<header x-data="{ open: false }" class="glass sticky top-0 z-50 border-b border-gray-200/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0">
                <a href="/" class="flex items-center space-x-2 group">
                    <i
                        class="fas fa-laptop-code text-apple-blue text-2xl transition-transform group-hover:scale-110"></i>
                    <span class="font-bold text-xl tracking-tight text-apple-dark">Mamdani Computers</span>
                </a>
            </div>
            <nav class="hidden md:flex md:items-center md:space-x-8">
                <a href="/"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'Home' ? 'text-apple-blue dark:text-apple-blue' : '' %>">Home</a>
                <a href="/products"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'Products' ? 'text-apple-blue dark:text-apple-blue' : '' %>">Products</a>
                <a href="/repair"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'Repair Services' ? 'text-apple-blue dark:text-apple-blue' : '' %>">Repair</a>
                <a href="/services"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'Our Services' ? 'text-apple-blue dark:text-apple-blue' : '' %>">Services</a>
                <a href="/about"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'About Us' ? 'text-apple-blue dark:text-apple-blue' : '' %>">About</a>
                <a href="/contact"
                    class="text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-apple-blue dark:hover:text-apple-blue transition-colors duration-300 <%= title === 'Contact Us' ? 'text-apple-blue dark:text-apple-blue' : '' %>">Contact</a>

                <!-- Theme Toggle -->
                <div class="relative ml-4" x-data="{ menuOpen: false }">
                    <button @click="menuOpen = !menuOpen"
                        class="w-8 h-8 flex items-center justify-center rounded-full bg-apple-gray text-apple-dark transition-all hover:scale-110">
                        <i class="fas"
                            :class="$store.theme.mode === 'dark' ? 'fa-moon' : ($store.theme.mode === 'light' ? 'fa-sun' : 'fa-circle-half-stroke')"></i>
                    </button>
                    <div x-show="menuOpen" @click.away="menuOpen = false" x-cloak
                        class="absolute right-0 mt-2 w-32 glass border border-gray-200/50 rounded-2xl shadow-2xl py-2 z-[60]">
                        <button @click="$store.theme.setMode('light'); menuOpen = false"
                            class="w-full px-4 py-2 text-left text-xs font-bold hover:bg-apple-blue/10 flex items-center">
                            <i class="fas fa-sun mr-3 w-4"></i> Light
                        </button>
                        <button @click="$store.theme.setMode('dark'); menuOpen = false"
                            class="w-full px-4 py-2 text-left text-xs font-bold hover:bg-apple-blue/10 flex items-center">
                            <i class="fas fa-moon mr-3 w-4"></i> Dark
                        </button>
                        <button @click="$store.theme.setMode('auto'); menuOpen = false"
                            class="w-full px-4 py-2 text-left text-xs font-bold hover:bg-apple-blue/10 flex items-center">
                            <i class="fas fa-circle-half-stroke mr-3 w-4"></i> Auto
                        </button>
                    </div>
                </div>
            </nav>
            <div class="flex items-center md:hidden">
                <button @click="open = !open"
                    class="text-gray-600 hover:text-apple-blue focus:outline-none transition-colors">
                    <i class="fas" :class="open ? 'fa-times' : 'fa-bars'" class="text-xl"></i>
                </button>
            </div>
        </div>
    </div>
    <!-- Mobile Menu -->
    <template x-teleport="body">
        <div x-show="open" @click="open = false" x-transition:enter="transition opacity-100 duration-300"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            class="fixed inset-0 z-[49] bg-white/20 backdrop-blur-2xl md:hidden"></div>
    </template>

    <div x-show="open" x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-y-4" x-transition:enter-end="opacity-100 translate-y-0"
        class="md:hidden glass border-b border-gray-200/50 shadow-xl relative z-50">
        <div class="px-4 pt-2 pb-6 space-y-1 sm:px-3">
            <a href="/"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">Home</a>
            <a href="/products"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">Products</a>
            <a href="/repair"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">Repair</a>
            <a href="/services"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">Services</a>
            <a href="/about"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">About</a>
            <a href="/contact"
                class="block py-3 px-4 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50/50 dark:hover:bg-white/5 hover:text-apple-blue rounded-xl">Contact</a>

            <div class="pt-6 mt-6 border-t border-gray-100 dark:border-white/10">
                <span class="text-[10px] uppercase font-bold text-gray-400 tracking-widest px-4 mb-4 block">Theme
                    Settings</span>
                <div class="grid grid-cols-3 gap-3 px-2">
                    <button @click="$store.theme.setMode('light')"
                        :class="$store.theme.mode === 'light' ? 'bg-apple-blue text-white' : 'bg-apple-gray dark:bg-white/5 text-gray-600'"
                        class="py-3 rounded-xl flex flex-col items-center justify-center transition-all">
                        <i class="fas fa-sun mb-2"></i>
                        <span class="text-[10px] font-bold">Light</span>
                    </button>
                    <button @click="$store.theme.setMode('dark')"
                        :class="$store.theme.mode === 'dark' ? 'bg-apple-blue text-white' : 'bg-apple-gray dark:bg-white/5 text-gray-600'"
                        class="py-3 rounded-xl flex flex-col items-center justify-center transition-all">
                        <i class="fas fa-moon mb-2"></i>
                        <span class="text-[10px] font-bold">Dark</span>
                    </button>
                    <button @click="$store.theme.setMode('auto')"
                        :class="$store.theme.mode === 'auto' ? 'bg-apple-blue text-white' : 'bg-apple-gray dark:bg-white/5 text-gray-600'"
                        class="py-3 rounded-xl flex flex-col items-center justify-center transition-all">
                        <i class="fas fa-circle-half-stroke mb-2"></i>
                        <span class="text-[10px] font-bold">Auto</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>