<header x-data="{ open: false }" class="glass sticky top-0 z-50 border-b border-gray-200/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0">
                <a href="/" class="flex items-center space-x-2 group">
                    <i
                        class="fas fa-laptop-code text-apple-blue text-2xl transition-transform group-hover:scale-110"></i>
                    <span class="font-bold text-xl tracking-tight text-apple-dark">Mamdani Computers</span>
                </a>
            </div>
            <nav class="hidden md:flex md:space-x-8">
                <a href="/"
                    class="text-sm font-medium text-gray-500 hover:text-apple-blue transition-colors duration-300 <%= title === 'Home' ? 'text-apple-blue' : '' %>">Home</a>
                <a href="/services"
                    class="text-sm font-medium text-gray-500 hover:text-apple-blue transition-colors duration-300 <%= title === 'Our Services' ? 'text-apple-blue' : '' %>">Services</a>
                <a href="/products"
                    class="text-sm font-medium text-gray-500 hover:text-apple-blue transition-colors duration-300 <%= title === 'Products' ? 'text-apple-blue' : '' %>">Products</a>
                <a href="/contact"
                    class="text-sm font-medium text-gray-500 hover:text-apple-blue transition-colors duration-300 <%= title === 'Contact Us' ? 'text-apple-blue' : '' %>">Contact</a>
            </nav>
            <div class="flex items-center md:hidden">
                <button @click="open = !open"
                    class="text-gray-600 hover:text-apple-blue focus:outline-none transition-colors">
                    <i class="fas" :class="open ? 'fa-times' : 'fa-bars'" class="text-xl"></i>
                </button>
            </div>
        </div>
    </div>
    <!-- Mobile Menu -->
    <div x-show="open" x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-y-4" x-transition:enter-end="opacity-100 translate-y-0"
        class="md:hidden glass border-b border-gray-200/50 shadow-xl">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
            <a href="/"
                class="block py-3 px-4 text-base font-medium text-gray-700 hover:bg-gray-50/50 hover:text-apple-blue rounded-xl">Home</a>
            <a href="/services"
                class="block py-3 px-4 text-base font-medium text-gray-700 hover:bg-gray-50/50 hover:text-apple-blue rounded-xl">Services</a>
            <a href="/products"
                class="block py-3 px-4 text-base font-medium text-gray-700 hover:bg-gray-50/50 hover:text-apple-blue rounded-xl">Products</a>
            <a href="/contact"
                class="block py-3 px-4 text-base font-medium text-gray-700 hover:bg-gray-50/50 hover:text-apple-blue rounded-xl">Contact</a>
        </div>
    </div>
</header>